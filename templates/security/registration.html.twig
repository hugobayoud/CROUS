{% extends "base.html.twig" %}

{% block body %}
	<h1 class="text-center">S'inscrire pour faire votre demande d'accès aux outils informatiques</h1>
		{{ form_start(form) }}

		<div class="row">
			<div class="col-md-6">{{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'placeholder': 'prénom'}}) }}</div>
			<div class="col-md-6">{{ form_row(form.nom, {'label': 'Nom', 'attr': {'placeholder': 'nom'}}) }}</div>
		</div>
		{{ form_row(form.email, {'label': 'Adresse mail', 'attr': {'placeholder': 'prenom.nom@crous-clermont.fr'}}) }}
		{{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'mot de passe'}}) }}
		{{ form_row(form.confirm_password, {'label': 'Confirmer mot de passe', 'attr': {'placeholder': 'confirmation mot de passe'}}) }}
		
		<hr>
		{{ form_rest(form) }}
		<button type="submit" class="btn btn-success">Insciption</button>
		{{ form_end(form) }}
{% endblock %}