{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="text-center">
    <h1>Bonjour</h1>

	{% if nbNewAccount == 0 %}
		<em>Aucun nouveau compte à valider ou demandes à traiter.</em>
	{% else %}
		<ul>
			<li>
				Vous avez {{ nbNewAccount }} compte{% if nbNewAccount > 1 %}s{% endif %} à valider. <br>
				Cliquez <a href="{{ path('admin.utilisateurs.validation') }}">ici</a> pour le{% if nbNewAccount > 1 %}s{% endif %} traiter.
			</li>
		</ul>	
	{% endif %}


</div>
{% endblock %}
