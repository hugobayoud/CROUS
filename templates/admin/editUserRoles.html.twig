{% extends "base.html.twig" %}

{% form_theme formDSI 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<h1 class="text-center">Validation</h1>
		<div style="margin-top: 30px;">
			<div class="card">
				<div class="card-title">DSI</div>
				<div class="card-body">
					{{ form_start(formDSI) }}
					Email :
					{{ form_widget(formDSI.email) }}
					DSI :
					{{ form_widget(formDSI.dsi) }}
					{{ form_end(formDSI) }}
				</div>
			</div>
		</div>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>
<script>
	$('select').select2();
</script>
{% endblock %}